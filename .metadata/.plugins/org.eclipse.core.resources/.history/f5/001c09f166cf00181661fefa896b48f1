package Graph;

public class UnionFind {
	private int[] ids;
	private int[] sizes;
	
	public UnionFind(int n) {
		ids = new int[n];
		sizes = new int[n];
		for (int i = 0; i < n; i++) {
			ids[i] = i;
			sizes[i] = 1;
		}
	}
	
	public int root(int a) {
		int id = a;
		while (ids[id] != id) {
			id = ids[id];
		}
		return id;
		
	}
	
	public void union(int a, int b) {
		
	}
	
	public boolean find(int a, int b) {
		
	}
}
